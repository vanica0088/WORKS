<view class="addbtn">

  <view class="btn-box">
    <button catchtap="addboss" class="btn-sure" size="default" hover-class="btn-sure-hover"> 发布兼职 </button>
  </view>

  <view class="btn-box">
    <button catchtap="addhunter" class="btn-sure" size="default" hover-class="btn-sure-hover"> 发布人才 </button>
  </view>

  <!-- 轮播图 -->
  <view class="page-section page-section-spacing swiper">
    <swiper>
      <block wx:for="{{background}}" wx:key="*this">
        <swiper-item>
          <image mode="widthFix" src="{{item}}" />
        </swiper-item>
      </block>
    </swiper>
  </view>

</view>