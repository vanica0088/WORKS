.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.default {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  font-weight: bold;
  color: #6A5ACD;
  background: rgba(184, 176, 236, 0.26);
}

.orange {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  border: 4rpx solid rgb(186, 185, 197);
  color: #666;
  font-weight: bold;
  background: rgba(184, 176, 236, 0.26);
}


.show{
  display: block;
  line-height: 200rpx;
}

.hidden{
  display: none;
  line-height: 200rpx;
}

.container{
  padding-top: 0rpx;
}

.scroll{
  margin-bottom: 100rpx;
}

.item{
  display: flex;
  width: 100%;
   background-color: #fff; 
   margin-bottom: 10rpx;
}

.item-main{
  flex: 1;
  padding: 32rpx 28rpx 32rpx 0;
  border-bottom: 1rpx solid #dcdcdc;
  line-height: 1;
}

.job{
  margin-bottom: 4rpx;
  padding-right: 120rpx;
  padding-left: 50rpx;
  position: relative;
}
.job-position {
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 29rpx;
  font-weight: bold;
  color: rgb(68, 68, 68);
  margin-right: 20rpx;
  letter-spacing: 3rpx;
}

.job-salary {
  font-size: 26rpx;
  font-weight: 600;
  color: rgb(255, 123, 0);
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
}

.job-time {
  width:180rpx;
  height:30rpx;
  background: #FAEBD7;
  text-align: center;
  margin-top: 25rpx;
  font-size: 24rpx;
  color: #FF8C00;
}

.job-company {
  color: #8b4513;
  font-size: 24rpx;
  margin-top: 25rpx;
  font-weight: bold;
}

.detail {
  padding-top: 10rpx;
  display: -webkit-box;
  font-size: 22rpx;
  color: #999;
  line-height: 30rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pub-title{
padding-top: 35rpx;
padding-bottom: 30rpx;
font-size: 40rpx;
color: #000;
font-weight: bold;
letter-spacing:5rpx;
}

.date{
  color: #999;
  float: right;

}